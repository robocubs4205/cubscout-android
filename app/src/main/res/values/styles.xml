<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="colorAccent">@color/red_a400</item>
        <item name="android:buttonStyle">@style/AppTheme.Button.Flat</item>
        <item name="toolbarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:windowBackground">@color/grey_100</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Button.Base" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.Button.Base">

    </style>

    <style name="AppTheme.Button.Flat">
        <item name="android:textColor">@color/indigo_700</item>
    </style>

    <style name="AppTheme.Button.Raised">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Raised.Container" parent="CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>

    </style>

    <style name="AppTheme.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.SubHeading">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.ExpansionIcon">
        <item name="android:background">@drawable/ic_expand_more_black_24dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="contentInsetStart">@dimen/activity_horizontal_margin</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
