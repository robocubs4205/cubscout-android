<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="horizontal"
              tools:layout_marginLeft="@dimen/activity_horizontal_margin"
              tools:layout_marginRight="@dimen/activity_horizontal_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/value_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:hint="Field">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:inputType="number"
            tools:ignore="RtlHardcoded"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/up_button"
            android:layout_width="@dimen/increment_button_size"
            android:layout_height="@dimen/increment_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/down_button"
            android:layout_width="@dimen/increment_button_size"
            android:layout_height="@dimen/increment_button_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
            tools:ignore="ContentDescription"/>
    </LinearLayout>

</LinearLayout>