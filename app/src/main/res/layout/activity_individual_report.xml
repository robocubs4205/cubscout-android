<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.robocubs4205.cubscout.IndividualReportActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/search_text"
        android:layout_toLeftOf="@+id/robot_search_button"
        android:layout_alignBaseline="@+id/robot_search_button"
        android:hint="@string/team_search_default_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/robot_search_button_text"
        android:id="@+id/robot_search_button"
        android:layout_alignParentRight="true"
        android:onClick="onSearchButtonClick" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/robot_search_button"
        android:id="@+id/report_fragment_container"></FrameLayout>
</RelativeLayout>
